<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">Editing Book</h5>
      <div class="form-body p-4">
<% if @book.errors.any? %>
        <ul class="alert alert-danger" role="alert">
          <h6 class="alert-heading">
  <%if @book.errors.count == 1 %>
    <%= @book.errors.count %>error prohibited this obj from being saved:
  <%else%>
    <%= @book.errors.count %>errors prohibited this obj from being saved:
  <%end%>
          </h6>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
        </ul>
<% end %>
<%= form_with model:@book do |f| %>
           <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
            </div>
 <%= f.text_field :title,class:"form-control", placeholder:"title" %>
           </div>
 <%= f.text_area :body, class:"form-control", rows:"3", placeholder:"opinion" %>
 <%= f.submit 'Update Book', class:"btn btn-lg btn-block btn-info mt-4" %>
 <%= link_to 'Show', book_path(@book.id) %>|
 <%= link_to 'Back', books_path %>
 
<% end %>
      </div>
    </div>
  </div>
</div>