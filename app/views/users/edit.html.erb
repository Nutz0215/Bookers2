<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">User info</h5>
      <div class="form-body p-4">
<% if @user.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
  <%if @user.errors.count == 1 %>
    <%= @user.errors.count %>error prohibited this obj from being saved:
  <%else%>
    <%= @user.errors.count %>errors prohibited this obj from being saved:
  <%end%>
            </h6> 
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
          </ul>
<% end %>

<%= form_with model: @user do |f| %>
   <div class="input-group mb-4 mt-4">
    <div class="input-group-prepend">
    </div>
   <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName",class:"form-control", placeholder:"name" %>
    </div>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, class:"form-control-file",id:"inputImage", placeholder: "profile_image", accept: "image/*" %> 
  <label for="inputIntroduction">Introduction</label>
  <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction",class:"form-control", placeholder:"introduction" %>
  <%= f.submit "Update User",class:"btn btn-lg btn-block btn-info mt-4" %>
<% end %>
      </div>
    </div>
  </div>
</div>