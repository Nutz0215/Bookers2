<div class='container'>
  <table class='table'>
  <h1>User info</h1>
  <%= image_tag user.get_profile_image(150,150) %>
    <tbody>
      <tr>
        <th>name</th>
        <th><%=  user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <%= link_to edit_user_path(user.id),class:'btn btn-outline-secondary btn-block' do%>
  <i class="fas fa-user-cog"></i>
  <% end %>
</div>

